function [hF, hA] = fun_addFig(iFig, r, c)

    hF = figure(iFig); clf(hF)
    hF.Color = 'k';
    
    for n = 1:r*c
        hA(n) = subplot(n, r, c, 'parent', hF);
        hA(n).Color = 'k';
        hold(hA(n), 'on')
    view(3)

    hA.XColor = 'w';
    hA.YColor = 'w';
    hA.ZColor = 'w';